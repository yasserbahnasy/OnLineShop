@model IEnumerable<OnLineShop.Models.tb_billinfo>

@{
    ViewBag.Title = "قائمة طرق الدفع";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<section class="main-content col-lg-9 col-md-9 col-sm-9">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 register-account">

            <div class="carousel-heading no-margin">
                <h4>طرق الدفع</h4>
            </div>

            <p>
                @Html.ActionLink("إضافة طريقة دفع جديدة", "AddBillInfo")
            </p>
            @foreach (var item in Model)
        {
                <div class="page-content">
                    <table class="orderinfo-table">

                        <tbody>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.fullname)</th>
                                <td>@Html.DisplayFor(modelItem => item.fullname)</td>
                            </tr>

                            <tr>
                                <th>@Html.DisplayNameFor(model => model.email)</th>
                                <td>@Html.DisplayFor(modelItem => item.email)</td>
                            </tr>

                            <tr>
                                <th>@Html.DisplayNameFor(model => model.company_name)</th>
                                <td>@Html.DisplayFor(modelItem => item.company_name)</td>
                            </tr>

                            <tr>
                                <th>@Html.DisplayNameFor(model => model.country)</th>
                                <td>@Html.DisplayFor(modelItem => item.country)</td>
                            </tr>

                            <tr>
                                <th>@Html.DisplayNameFor(model => model.city)</th>
                                <td>@Html.DisplayFor(modelItem => item.city)</td>
                            </tr>

                            <tr>
                                <th>@Html.DisplayNameFor(model => model.region)</th>
                                <td>@Html.DisplayFor(modelItem => item.region)</td>
                            </tr>

                            <tr>
                                <th>@Html.DisplayNameFor(model => model.address)</th>
                                <td>@Html.DisplayFor(modelItem => item.address)</td>
                            </tr>

                            <tr>
                                <th>@Html.DisplayNameFor(model => model.phone)</th>
                                <td>@Html.DisplayFor(modelItem => item.phone)</td>
                            </tr>

                            <tr>
                                <th>@Html.DisplayNameFor(model => model.postal_code)</th>
                                <td>@Html.DisplayFor(modelItem => item.postal_code)</td>
                            </tr>

                            <tr>
                                <th>تعديل / حذف</th>
                                <td>
                                    @Html.ActionLink("تعديل", "EditBill/" + @Html.DisplayFor(modelItem => item.id), null, new { @class = "button" })
                                    @Html.ActionLink("حذف", "DeleteBill/" + @Html.DisplayFor(modelItem => item.id), null, new { @class = "button" })
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
        }
        </div>
    </div>
</section>

<!--Partial Aside-->
@Html.Partial("_account")
<!--Partial Aside-->
