@model OnLineShop.Models.tb_ship

@{
    ViewBag.Title = "إضافة طريقة شحن";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <section class="main-content col-lg-9 col-md-9 col-sm-9">

        <div class="row">

