@model IEnumerable<OnLineShop.Models.tb_brands>
@foreach (var item in Model)
{

    ViewBag.Title = @Html.DisplayFor(modelItem => item.name);
    Layout = "~/Views/Shared/_MainLayout.cshtml";

<div class="alert alert-success msgAlert"></div>
<section class="main-content col-lg-9 col-md-9 col-sm-9">

    <div class="row">

        <!-- Heading -->
        <div class="col-lg-12 col-md-12 col-sm-12">

            <div class="carousel-heading">
                <h4>@Html.DisplayFor(modelItem => item.name)</h4>
            </div>

        </div>
        <!-- /Heading -->

    </div>

    <div class="row">
        @foreach (var subItem in item.tb_products)
        {
        <!-- Product Item -->
            <div class="col-lg-4 col-md-4 col-sm-4 product">

                <div class="product-image">
                    <img src="~/uploads/@subItem.image" alt="Product1">
                    <a href="~/product/@subItem.id" class="product-hover">
                        <i class="icons icon-eye-1"></i> نظرة سريعه
                    </a>
                </div>

                <div class="product-info">
                    <h5><a href="~/product/@subItem.id">@subItem.title</a></h5>
                    <span class="price">@subItem.price EGP</span>
                    <div class="rating readonly-rating" data-score="4" title="good" style="width: 100px;"><img src="~/scripts/img/star-on.png" alt="1" title="good">&nbsp;<img src="~/scripts/img/star-on.png" alt="2" title="good">&nbsp;<img src="~/scripts/img/star-on.png" alt="3" title="good">&nbsp;<img src="~/scripts/img/star-on.png" alt="4" title="good">&nbsp;<img src="~/scripts/img/star-off.png" alt="5" title="good"><input type="hidden" name="score" value="4" readonly="readonly"></div>
                </div>

                <div class="product-actions">
                    <span class="add-to-cart current">
                        <span class="action-wrapper">
                            <i class="icons icon-basket-2"></i>
                            <span class="action-name">Add to cart</span>
                        </span>
                    </span>
                    <span class="add-to-favorites">
                        <input type="hidden" name="product_id" id="product_id" value="@Html.DisplayFor(model => model.id)">
                        <span class="action-wrapper">
                            <a id="AddToWish">
                                <i class="icons icon-heart-empty"></i>
                                <span class="action-name">إضافة إلي المفضلات</span>
                            </a>
                        </span>
                    </span>
                </div>

            </div>
        <!-- Product Item -->
        }
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="pagination">
                <a href="#"><div class="previous"><i class="icons icon-left-dir"></i></div></a>
                <a href="#"><div class="page-button">1</div></a>
                <a href="#"><div class="page-button">2</div></a>
                <a href="#"><div class="page-button">3</div></a>
                <a href="#"><div class="next"><i class="icons icon-left-dir"></i></div></a>
            </div>
        </div>

    </div>



</section>
}

<!--Partial Aside-->
@Html.Partial("_Aside")
<!--Partial Aside-->
