@model OnLineShop.Models.tb_brands

@{
    ViewBag.Title = "تعديل العلامة التجارية";
    Layout = "~/Views/Shared/_ControlPanalLayout.cshtml";
}

@using (Html.BeginForm("EditBrand", "ControlPanal", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <section class="main-content col-lg-12 col-md-12 col-sm-12">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 register-account">

                <div class="carousel-heading no-margin">
                    <h4>تعديل العلامة التجارية</h4>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)

                @Html.HiddenFor(model => model.logo)

                <div class="form-group">
                       إسم العلامة التجارية
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    رابط العلامة التجارية
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.englishname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.englishname, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    صورة العلامة التجارية
                    <div class="col-md-10">
                        <input type="file" name="Uploadimage" id="Uploadimage" class="form-control" />
                        @Html.ValidationMessageFor(model => model.logo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="تعديل" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </section>
}
