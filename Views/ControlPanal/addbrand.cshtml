@model OnLineShop.Models.tb_brands

@{
    ViewBag.Title = "إنشاء علامة تجارية";
    Layout = "~/Views/Shared/_ControlPanalLayout.cshtml";
}


@using (Html.BeginForm("addbrand", "ControlPanal", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <section class="main-content col-lg-12 col-md-12 col-sm-12">

        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12 register-account">

                <div class="carousel-heading no-margin">
                    <h4>إنشاء علامة تجارية</h4>
                </div>
                <p>@ViewBag.msg</p>
                <div class="page-content">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        إسم العلامة التجارية
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        رابط العلامة التجارية
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.englishname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.englishname, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        صورة علامة التجارية
                        <div class="col-md-10">
                            <input type="file" name="Uploadimage" id="Uploadimage" value="" class="form-control" />
                            @Html.ValidationMessageFor(model => model.logo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="إنشاء" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}