@model IEnumerable<OnLineShop.Models.tb_Categories>

@{
    ViewBag.Title = "الأقسام";
    Layout = "~/Views/Shared/_ControlPanalLayout.cshtml";
}

<section class="main-content col-lg-12 col-md-12 col-sm-12">

    <div class="row">

        <div class="col-lg-12 col-md-12 col-sm-12 register-account">

            <div class="carousel-heading no-margin">
                أقسام الموقع
            </div>
            <table class="table table-stripped table-bordered table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.cat_name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cat_icon)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cat_desc)
                    </th>
                    <th>تعديل</th>
                    <th>حذف</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.cat_name)
                        </td>
                        <td>
                            <i class="@Html.DisplayFor(modelItem => item.cat_icon)"></i>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cat_desc)
                        </td>
                        <td>
                            @Html.ActionLink("تعديل", "EditCategory", new { id = item.cat_id })
                        </td>
                        <td>
                            @Html.ActionLink("حذف", "DeleteCategory", new { id = item.cat_id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>